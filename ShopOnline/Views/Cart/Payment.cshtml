@model List<ShopOnline.Models.Caritem>
@{
    ViewBag.Title = "Thanh toan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table style="font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;">
                <thead>
                    <tr>
                        <td>Ma sp</td>
                        <td>Ten sp</td>
                        <td>Anh sp</td>
                        <td>so luong</td>
                        <td>don gia</td>
                        <td>thanh tien</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Image" width="100" /></td>
                            <td><input type="text" class="txtquanlity" data-id="@item.Product.ID" value="@item.Quantily" /></td>
                            <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantily).ToString("N0"))</td>
                            <td><a href="#" class="btn-delete" data-id="@item.Product.ID">Xoa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="section">
        @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
        {
            <div style="margin-bottom: 15px;">
                <label> nguoi nhan</label>
                <input name="shipname" class="form-control" />
            </div>
            <div style="margin-bottom: 15px;">
                <label>dien thoai</label>
                <input name="mobile" class="form-control" />
            </div>
            <div style="margin-bottom: 15px;">
                <label>dia chi</label>
                <input name="address" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input name="email" class="form-control" />
            </div>
            <button type="submit" class="btn">gui don hang</button>
        }
    </div>
</div>







